<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout>
        <Pattern>%highlight{%d [%p] %c{2} [%t] %l %n%m}{STYLE=Logback}</Pattern>
      </PatternLayout>
    </Console>
    <File name="File" fileName="target/logs/framework.log">
      <PatternLayout>
        <Pattern>%highlight{%d [%p] %c{2} [%t] %n%m}{STYLE=Logback}</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>